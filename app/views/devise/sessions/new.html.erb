<div class="container">
  <div row="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>Connexion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions same-line">
          <%= link_to "CrÃ©er son compte", new_user_registration_path, class: "btn btn-secondary btn-lg" %>
          <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

