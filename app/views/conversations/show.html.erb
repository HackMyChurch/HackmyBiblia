<div class="container">
  <div row="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="panel panel-white post panel-shadow">
        <div class="post-heading">
          <div class="pull-left meta">
              <div class="title h5">
                <%= @conversation.name %>
              </div>
              <div class="title h3">
                <b><%= @chapter.title %></b>
              </div>
          </div>
        </div>
        <div class="post-description">
          <p> <%= @chapter.description %> </p>
          <p><em><%= @chapter.bible_ref %> </em></p>
          <div class="stats">
              <%= link_to group_conversation_addlike_path(@group, @conversation) do %>
                <span class="btn btn-default stat-item red-heart">
                  <i class="fa fa-heart icon"></i> <%= @conversation.likes %>
                </span>
              <% end %>
          </div>
        </div>
        <div class="post-footer">
          <div class="input-group">
            <input class="form-control" placeholder="Ajouter un commentaire" type="text">
            <span class="input-group-addon">
              <a href="#"><i class="fa fa-edit"></i></a>
            </span>
          </div>
          <ul class="comments-list">
            <% @messages.each do |message| %>
              <li class="comment">
                <a class="pull-left avatar" href="#">
                  <%= image_tag message.author_img, height: 40 %>
                </a>
                <div class="comment-body">
                  <div class="comment-heading">
                      <h4 class="user"><%= message.author_name %></h4>
                  </div>
                  <p><%= message.name %></p>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
